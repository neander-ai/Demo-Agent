{
  "manifest_version": 3,
  "name": "Website Activity Recorder",
  "version": "1.0",
  "description": "Records website activity using rrweb with reload persistence",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}